/* pages/menu/menu.wxss */


.menu_container {
    display: flex;
    flex-wrap: wrap;
    flex-direction:row;
    width: 100%;
}

.menu_item {
    width: 25%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    font-size: 12px;
    padding-bottom: 10px;
    padding-top: 10px;
}
.menu_icon {
    width: 40px;
    height: 40px;
    padding-bottom: 5px;
    border-radius: 50%;
}

.formconten{
  margin-top: 20px;
    display: flex;
    justify-content: center;
     align-items: center;
  flex-direction:column;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 30rpx;
  width: 90%;
  height: 30px;
}

